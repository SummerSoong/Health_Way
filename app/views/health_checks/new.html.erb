<div class="page-body d-flex justify-content-between">
  <div class="page-left col-3 d-flex flex-column">
    <h1 class="page-title">
      Schedule Appointment
    </h1>
    <br>
    <br>
    <% if @set_up.users.include?(current_user) %>
      <p>No new set_up to assign</p>
    <% else %>
      <div>
        <p>Time Frame</p>
        <p><%= "#{@set_up.start_date.strftime(@set_up.start_date.day.ordinalize + ' %b %Y')}-#{@set_up.end_date.strftime(@set_up.end_date.day.ordinalize + ' %b %Y')}" %></p>
        <%= simple_form_for [@set_up, @health_check] do |f| %>
          <%= f.input :date, label: "Select Date", html5: true, input_html: {min: @set_up.start_date, max: @set_up.end_date} %>
          <%= f.association :clinic, label: "Select Clinic", collection: @clinics %>
          <%= f.input :result, as: :file %>
          <%= f.submit "Confirm", class: "btn btn-success text-white w-100" %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="page-right col-6">
    <div style="width: 100%; height: 100%;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
